<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.jitmarketing.hot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

   <cn.jitmarketing.hot.view.TitleWidget
        android:id="@+id/shelf_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:text="@string/allocation_create"
        app:left_bg="@drawable/back" />

    <ListView
        android:id="@+id/only_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shelf_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="50dp"
        android:divider="@color/color_home_horizontal"
        android:listSelector="#00000000"
        android:background="@drawable/shadow_bg"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/text_one"
            style="@style/normal_button_text"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="退仓" />
        
        <TextView
            android:id="@+id/text_three"
            style="@style/normal_button_text"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="调拨" />

        <TextView
            android:id="@+id/text_two"
            style="@style/normal_button_text"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="手工" />
    </LinearLayout>

</RelativeLayout>