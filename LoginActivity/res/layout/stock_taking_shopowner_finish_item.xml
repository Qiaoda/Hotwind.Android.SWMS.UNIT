<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shelf_code_txt"
                    style="@style/normal_black_text"
                    android:textSize="22sp"
                    android:paddingLeft="8dp" />

                <TextView
                    android:id="@+id/check_person_txt"
                    style="@style/normal_black_text"
                    android:paddingLeft="8dp" />
                
                <TextView
                    android:id="@+id/check_time_txt"
                    style="@style/normal_black_text"
                    android:paddingLeft="8dp" />
                
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_home_horizontal" />

            <TextView
                android:id="@+id/status_txt"
                style="@style/normal_black_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/taking_finish_btn"
            style="@style/normal_button_text"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="盘点完成" />
    </LinearLayout>

</LinearLayout>