<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg" >

    <LinearLayout
        android:id="@+id/self_sku_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView 
                style="@style/normal_black_text"
                android:text="原单号：" />

            <TextView
                android:id="@+id/rece_sku_code"
                style="@style/normal_black_text"
                android:gravity="left" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView 
                style="@style/normal_black_text"
                android:text="单号：" />

            <TextView
                android:id="@+id/sku_code"
                style="@style/normal_black_text"
                android:gravity="left" />
        </LinearLayout>

        <TextView
            android:id="@+id/souce_txt"
            style="@style/normal_black_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >

            <TextView
                android:id="@+id/rece_count"
                style="@style/normal_black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rece_status"
                style="@style/normal_black_text"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical" />
        </RelativeLayout>
         <!-- 备注 -->
         <TextView
            android:id="@+id/from_remark"
            style="@style/normal_black_text"
            android:gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
        <LinearLayout
            android:id="@+id/finish_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_home_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" >

                <TextView
                    android:id="@+id/rece_in_time"
                    style="@style/small_gray_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/rece_result"
                    style="@style/normal_black_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>