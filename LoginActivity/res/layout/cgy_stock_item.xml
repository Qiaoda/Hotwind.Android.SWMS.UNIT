<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.jitmarketing.hot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <cn.jitmarketing.hot.view.TitleWidget
        android:id="@+id/cgy_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:right_bg="@drawable/warning_click_button"
        app:left_bg="@drawable/back" />

    <ListView
        android:id="@+id/sku_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cgy_title"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:padding="1dp"
        android:background="@drawable/shadow_bg"
        android:divider="@color/color_home_horizontal"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sku_sure"
            style="@style/normal_button_text"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="确定" />

        <TextView
            android:id="@+id/sku_hand"
            style="@style/normal_button_text"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="手工" />
    </LinearLayout>

</RelativeLayout>