<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/stock_name"
                    style="@style/normal_black_text" />

                <TextView
                    android:id="@+id/stock_time"
                    style="@style/small_gray_text"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <View
                android:id="@+id/stock_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_home_horizontal" />

            <TextView
                android:id="@+id/stock_status"
                style="@style/small_gray_text"
                android:width="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="无差异" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/isfinsh_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center" >

            <Button
                android:id="@+id/stock_detail"
                style="@style/normal_button_text"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:text="库位明细" />

            <Button
                android:id="@+id/stock_finish"
                style="@style/normal_button_text"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:text="盘点结束" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>