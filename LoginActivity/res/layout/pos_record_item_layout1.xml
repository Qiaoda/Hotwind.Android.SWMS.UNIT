<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_addr" />

            <TextView
                android:id="@+id/bill_no_txt"
                style="@style/small_gray_text"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/apply_type"
                style="@style/normal_black_text"
                android:textColor="@color/color_red_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_home_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/goods_sku_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_green_frame"
                android:scaleType="center"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="8dp" >

                <TextView
                    android:id="@+id/goods_sku_name"
                    style="@style/normal_black_text"
                    android:textColor="@color/color_gray_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/layout_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/normal_black_text"
                            android:gravity="center_vertical"
                            android:text="颜色:  "
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/goods_sku_color"
                            style="@style/normal_black_text"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_green"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/normal_black_text"
                            android:gravity="center_vertical"
                            android:text="尺码:  "
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/goods_sku_size"
                            style="@style/normal_black_text"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_green"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/normal_black_text"
                        android:gravity="center_vertical"
                        android:text="数量:  "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/goods_sku_stock_num"
                        style="@style/normal_black_text"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_green"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_home_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/normal_black_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="交易时间" />

            <TextView
                android:id="@+id/goods_sku_time"
                style="@style/normal_black_text"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="0:00:50" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>