<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/color_gray_text"
        android:padding="4dp"
        android:text="A"
        android:gravity="center_vertical"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shadow_bg"
        android:gravity="center_vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shelf_code_txt"
                style="@style/normal_black_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operator_txt"
                style="@style/normal_black_text" />

            <LinearLayout
                android:id="@+id/show_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:text="盘点时间:  " />

                    <TextView
                        android:id="@+id/check_time_txt"
                        style="@style/normal_black_text"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/money_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:text="差异金额:  " />

                    <TextView
                        android:id="@+id/dif_money_txt"
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:textColor="@color/color_green" />
                    
                    <TextView
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:text="元" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/count_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:text="差异数:  " />

                    <TextView
                        android:id="@+id/dif_count_txt"
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:textColor="@color/color_green" />
                    
                    <TextView
                        style="@style/normal_black_text"
                        android:gravity="left"
                        android:text="个" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_home_horizontal" />

        <TextView
            android:id="@+id/status_txt"
            style="@style/normal_black_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
    </LinearLayout>

</LinearLayout>