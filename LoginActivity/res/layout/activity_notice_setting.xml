<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.jitmarketing.hot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <cn.jitmarketing.hot.view.TitleWidget
        android:id="@+id/notice_setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_bg="@drawable/back"
        app:text="@string/setting" />

    <ExpandableListView   
        android:id="@+id/expand_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/nulls"
        android:childDivider="@color/color_home_horizontal"
        android:dividerHeight="0.5dp"/>

</LinearLayout>